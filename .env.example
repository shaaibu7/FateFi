# Environment variables for development
# Copy this file to .env.local and update with your values

# Database
DATABASE_URL="your_database_url_here"

# WalletConnect Project ID (Required for wallet connection)
# Get your project ID from: https://cloud.walletconnect.com
# Create a free account and create a new project to get your project ID
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_walletconnect_project_id_here"

# Privy (Authentication) - OPTIONAL, can use wagmi instead
NEXT_PUBLIC_PRIVY_APP_ID="your_privy_app_id_here"

# Farcaster
NEXT_PUBLIC_FARCASTER_APP_ID="your_farcaster_app_id_here"

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key_here"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# API URLs
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# App Configuration
NEXT_PUBLIC_APP_NAME="Masang"
NEXT_PUBLIC_APP_DESCRIPTION="Masang is a prediction market platform that uses Account Abstraction to offer a seamless."

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_FARCASTER="true"